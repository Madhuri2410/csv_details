<%= form_with(model: document) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <%= form.label :name, class: "mt-2 mb-2" %>
    <%= form.text_field :name, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "mt-2 mb-2" %>
    <%= form.text_area :description, class: "form-control form-control-lg" %>
  </div>

  <div>
    <%= form.label :doc_file, style: "display: block" %>
    <%= form.file_field :doc %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
